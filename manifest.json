{
  "manifest_version": 3,
  "name": "PC usage thermostat",
  "version": "0.0.1",
  "description": "PC Usage thermostat",
  "permissions": [
    "storage",
    "scripting", 
    "activeTab"
  ],
  "author": "shundayo.131@gmail.com",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "js": ["domManipulation.js"],
      "matches": ["*://*/*"]
    }
  ],
  "action": {
    "default_popup": "main.html",
    "default_icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_title": "Tracking your PC usage time!"
  }
}